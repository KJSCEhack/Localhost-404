<% include ../partials/header %>

<div class="container" style="margin-top: 40px;">
	<div class="d-flex justify-content-center">
		<div class="card" style="margin-bottom: 40px;">
			<div class="card-body">
				<h1>Post a new Problem</h1>
					 <div> 
						<form action="/problems/<%= problem._id %>?_method=PUT" method="POST">
							<div class="form-group">
								<input class="form-control" type="text" name="problem[name]" value="<%= problem.name %>">
							</div>
							<div class="form-group">
				                <textarea class="form-control" rows="5" name="problem[content]"><%= problem.content %></textarea>
				            </div>
				            <div class="form-group">
			                    <input class="form-control" type="text" name="problem[image]" value="<%=problem.image %>">
			                </div>
				            <div class="form-group">
					            <label for="sel1">Type of problem</label>
		                        <select class="form-control" name="problem[type]" id="sel1" onchange="addInput()" required>
		                            <option>Roads</option>
		                            <option>Power</option>
		                            <option>Water</option>
		                            <option>Over-crowding</option>
		                            <option>Others</option>
		                        </select>
				            </div>
				            
				            <div class="form-group">
							  <label for="sel1">Select ward</label>
							  <select class="form-control" name="problem[ward]" id="sel1" required>
							    <option>A</option>
							    <option>B</option>
							    <option>C</option>
							    <option>D</option>
							    <option>E</option>
							    <option>F</option>
							    <option>G</option>
							    <option>H</option>
							    <option>K</option>
							    <option>P</option>
							    <option>R</option>
							    <option>L</option>
							    <option>M</option>
							    <option>N</option>
							    <option>S</option>
							    <option>T</option>
							  </select>
				            	<input type="text" name="problem[locality]" value="<%= problem.locality%>" class="form-control mb-1">
				            	<input type="text" name="problem[area]" value="<%= problem.area%>" class="form-control">
				            	<input type="city" name="fcity" value="Mumbai" class="form-control mt-1" disabled>
				            </div>

				            <div class="form-group" id="file-upload">
				                <input class="form-control-file border" type="file" name="fimage" disabled>
				            </div>
				            
				            
				            <div class="form-group">
				                <button class="btn btn-primary btn-lg btn-block">Submit</button>
				            </div>
						</form>
					 </div> 

					<a href="/problems">Go Back</a>
					</div>
		</div>
	</div>
</div>


<% include ../partials/footer %>
